<launch>

    <arg name="markerSize"      default="0.08"/>    <!-- in m -->
    <arg name="ref_frame"       default="map"/>  <!-- leave empty and the pose will be published wrt param parent_name -->


    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher">
        <remap from="/camera_info" to="/r200/camera/color/camera_info" />
        <remap from="/image" to="/r200/camera/color/image_raw" />
        <!--<remap from="/camera_info" to="/rrbot/camera1/camera_info" />
        <remap from="/image" to="/rrbot/camera1/image_raw" />-->
        <param name="image_is_rectified" value="False"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="optical_frame"/>
        <!--<param name="camera_frame"       value="camera_link"/>-->
    </node>

</launch>

